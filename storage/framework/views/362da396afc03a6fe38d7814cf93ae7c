<script>
    $(function(){

        var msg = $('.msg-info').text();

        if($('.msg').attr('code')==1){
            layer.msg(msg,{skin:'msg-success',icon:1});
        }
        else if($('.msg').attr('code')==0) {
            layer.msg(msg,{skin:'msg-error',icon:1});
        } else {
            return;
        }
    })
</script>