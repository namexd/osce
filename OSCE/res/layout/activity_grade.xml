<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <include layout="@layout/acticity_title" />

    <LinearLayout
        android:id="@+id/main_activity_station_LL"
        style="@style/activity_top_LL_style" >

        <ImageView
            style="@style/activity_top_LL_image_style"
            android:src="@drawable/pad_" />

        <TextView
            android:id="@+id/textView_testStation"
            style="@style/activity_top_LL_textView_style"
            android:layout_marginRight="20dp"
            android:layout_weight="5"
            android:text="考站" />

        <ImageView
            style="@style/activity_top_LL_image_style"
            android:src="@drawable/pad_time" />

        <com.mx.osce.custom.CustomAnticlockwise
            android:id="@+id/textView_Time"
            style="@style/activity_top_LL_textView_style"
            android:layout_marginRight="20dp"
            android:layout_weight="5" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 详细打分 -->

    </FrameLayout>

</LinearLayout>