<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popuowindos"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y15"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linear_camera"
            android:layout_width="0dp"
            android:layout_height="@dimen/y15"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/image_camera_selector"
                android:padding="@dimen/y4" />

            <TextView
                android:id="@+id/testView_camera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/y2"
                android:text="拍照" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#d1d1d1" />

        <LinearLayout
            android:id="@+id/linear_mic"
            android:layout_width="0dp"
            android:layout_height="@dimen/y15"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/image_mic_selector" />

            <TextView
                android:id="@+id/textView_mic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/y2"
                android:text="录音" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="#d1d1d1" />

        <LinearLayout
            android:id="@+id/linear_mark"
            android:layout_width="0dp"
            android:layout_height="@dimen/y15"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/image_mark_selector" />

            <TextView
                android:id="@+id/textView_mark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="@dimen/y2"
                android:text="描点" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d1d1d1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/poplist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2" >
        </ListView>

        <com.mx.osce.audio.AudioRecorderButton
            android:id="@+id/recorderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y19"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/y23"
            android:layout_marginRight="@dimen/y23"
            android:layout_marginTop="@dimen/y4"
            android:background="@drawable/btn_recorder_normal"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="@dimen/y2"
            android:text="@string/str_recorder_normal"
            android:textColor="#727272"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>