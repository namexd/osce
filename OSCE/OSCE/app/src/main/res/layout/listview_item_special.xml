<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="41" >

        <TextView
            android:id="@+id/tv_fragment_test_detail_point_item_num_spec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp"
            android:text="00"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d1d1d1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="21"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_fragment_test_detail_point_item_content_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_fragment_test_detaile_point_item_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="test content"
                android:textColor="@color/color_contnte_one"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:background="#d1d1d1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="18"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editPoint_spec"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y19"
                android:layout_marginBottom="@dimen/y4"
                android:layout_marginLeft="@dimen/y19"
                android:layout_marginRight="@dimen/y19"
                android:layout_marginTop="@dimen/y4"
                android:background="@drawable/evaluate_edit_shape"
                android:gravity="center"
                android:inputType="number"
                android:textSize="@dimen/text_size_normal" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>