<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Application theme. -->

    <style name="activity_top_LL_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="activity_top_LL_textView_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/y6</item>
        <item name="android:textSize">@dimen/simple_font_size</item>
    </style>

    <style name="activity_top_LL_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y19</item>
        <item name="android:layout_marginTop">@dimen/y4</item>
        <item name="android:layout_marginLeft">@dimen/y4</item>
        <item name="android:layout_marginRight">@dimen/y4</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="activity_top_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y19</item>
        <item name="android:background">@drawable/btn_top_sahpe</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/y6</item>
        <item name="android:textSize">@dimen/simple_font_size</item>
    </style>

    <style name="activity_grade_textview_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/grade_textview_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/y4</item>
        <item name="android:textSize">@dimen/simple_font_size</item>
        <item name="android:layout_marginRight">@dimen/y7</item>
    </style>

    <style name="fragment_grade_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/y8</item>
        <item name="android:layout_marginTop">@dimen/y8</item>
        <item name="android:textSize">@dimen/simple_font_size</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 录音对话框 <style name="Theme_AudioDialog"> -->
    <style name="Theme_AudioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- 自定义ratingbar -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <!-- progress_horizontal -->
    <style name="progress_horizontal_custom">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_custom</item>
        <item name="android:indeterminateDrawable">@color/grey</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>

    <!-- 自定义actionBar -->
    <style name="custom_title" parent="AppBaseTheme">
        <item name="android:windowTitleSize">54dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#5cacee</item>
    </style>

    <style name="alert_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <!-- Dialog Style -->
    <style name="dialog_blue_button" parent="@android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
    <!-- CustomSeekBar Styles -->
    <!-- Popup -->
    <style name="popup_animation">
        <item name="@android:windowEnterAnimation">@anim/popup_show</item>
        <item name="@android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="MyDialogStyle" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- SeekBar -->
    <declare-styleable name="CustomSeekBar">
        <attr name="markItemNum" format="integer" />
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="backgroundColor" format="color" />
        <attr name="selectedColor" format="color" />
        <attr name="markDescArray" format="reference|string" />
        <attr name="markTextSize" format="reference|dimension" />
        <attr name="markTextColor" format="color" />
        <attr name="progressDrawable" format="reference" />
        <attr name="thumbDrawable" format="reference" />
        <attr name="markDrawable" format="reference" />
        <attr name="progressDrawableHeight" format="dimension" />
        <attr name="progressHeight" format="dimension" />
        <attr name="thumbHeight" format="dimension" />
        <attr name="popupWidth" format="dimension" />
        <attr name="yOffset" format="dimension" />
        <attr name="isShowPopup" format="boolean" />
    </declare-styleable>

</resources>