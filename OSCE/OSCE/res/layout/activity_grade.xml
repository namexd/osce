<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <include layout="@layout/acticity_title" />

    <LinearLayout
        android:id="@+id/main_activity_station_LL"
        style="@style/activity_top_LL_style" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" >

            <ImageView
                style="@style/activity_top_LL_image_style"
                android:src="@drawable/pad_" />

            <TextView
                android:id="@+id/textView_testStation"
                style="@style/activity_top_LL_textView_style"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:text="考站" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/pad_time" />

            <TextView
                android:id="@+id/tv_time_tips"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingLeft="@dimen/y6"
                android:text="倒计时"
                android:textSize="23sp" >
            </TextView>

            <!--
                 <com.mx.osce.custom.CustomAnticlockwise
                android:id="@+id/textView_Time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="23sp" />
            -->
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- FragmentGrade -->

    </FrameLayout>

</LinearLayout>