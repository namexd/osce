<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="41" >

        <TextView
            android:id="@+id/tv_fragment_test_detail_point_itenm_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|start"
            android:padding="10dp"
            android:text="00"
            android:textColor="@color/color_contnte_one"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d1d1d1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="21"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_fragment_grade_detail_point_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/simple_font_size" />

            <TextView
                android:id="@+id/tv_fragment_test_detaile_point_item_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:textColor="#f8ac59"
                android:textSize="@dimen/simple_font_size"
                android:visibility="gone" >
            </TextView>
        </LinearLayout>

        <View
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:background="#d1d1d1" />

        <com.mx.test.custom.CalendarCard
            android:id="@+id/sb_fragment_grade_detail_point_item_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d1d1d1" />

</LinearLayout>